<style type=text/css>
.stationName {
	height: 80px;
    text-align: left;
}
#buttoncontainer .ui-btn-text{
	font-size: 30px;
	/*color: #000066;*/
}
</style>
<div data-role="page" id="demo-page">  
	<div data-role="header" data-theme="b">
		<h1>理財天地</h1>
        <%if current_user %>
        	<%= link_to "Logout", destroy_user_session_path, :method=>"delete", :"data-icon"=>"gear", :"class"=>"ui-btn-right"%>
      	<%else%>
        	<%= link_to "Login", new_user_session_path, :"data-icon"=>"gear", :"class"=>"ui-btn-right"%>
      	<%end%>		
	</div>
	<div data-role="content" id='buttoncontainer'>	
		<div class="ui-grid-solo">
			<% @stations.each do |station| %>
				<div class="ui-block-a">
					<%= link_to station.name, categories_station_path(station), :"data-role"=>"button", :"data-corners"=>"false", :"data-theme"=>"d", :"class"=>"stationName", :'rel'=>"external" %>	
				</div>
			<% end %>
		</div>
		<!-- <a href="https://mixpanel.com/f/partner" data-role="button" data-theme="c"><img src="//cdn.mxpnl.com/site_media/images/partner/badge_light.png" alt="Mobile Analytics" /></a> -->
	</div><!-- /content -->
	<div data-role="footer" data-position="fixed" data-theme="b">		
		<h2>Powered by BruinSquare</h2>
	</div><!-- /footer -->	
</div>

<script>
	mixpanel.track("Landing Page Loaded");
</script>