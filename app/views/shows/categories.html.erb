<style type=text/css>
.categoryName {
	height: 100px;
    text-align: left;
}
</style>
<div data-role="page" id="CategoryPage">
	<div data-role="header" data-theme="b">
		<h1><%=@station.name%></h1>
		<%= link_to 'Back',stations_path, {"class"=>"ui-btn-left", "data-icon" => "back", "rel"=>'external'} %>
	</div>
	<div data-role="content">
		<fieldset class="ui-grid-a">
			<% i = 0 %>
			<% @station.shows.group(:category).order('category DESC').each do |show| %>
				<% if i%2 == 0 %>
					<div class="ui-block-a">
						<%= link_to show.category, station_shows_path(show.station, :category=>show.category), :"data-role"=>"button", :"data-corners"=>"false", :"data-theme"=>"c", :"class"=>"categoryName" %>	
					</div>						
				<% else %>
					<div class="ui-block-b">
						<a>
						<%= link_to show.category, station_shows_path(show.station, :category=>show.category), :"data-role"=>"button", :"data-corners"=>"false", :"data-theme"=>"c", :"class"=>"categoryName" %>
						</a>
					</div>					
				<% end %>			
				<% i = i + 1 %>
			<% end %>
		</fieldset>
	</div>
	<div data-role="footer" data-position="fixed" data-theme="b">
		<h4>powered by @BruinSquare</h4>
	</div><!-- /footer -->	
</div>